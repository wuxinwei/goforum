<!-- template: post/list -->
<link href="/static/css/post/list.css" rel="stylesheet"/>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th><strong> Post Title </strong></th>
                    <th><strong> Post Author </strong></th>
                    <th> Publish Date</th>
                    <th> Last Update Date</th>
                </tr>
                </thead>
                <tbody>
                {{#each posts}}
                    <tr>
                        <td><a href="http://localhost:3000/post/{{iD}}"> {{title}} </a>
                        <td> {{author}}
                        <td> {{createdAt}}
                        <td> {{updatedAt}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>


