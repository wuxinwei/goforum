<!-- template: users/profile -->
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/static/css/user/profile.css">
    <script type="text/javascript" charset="UTF-8" src="/goforum/static/js/user/profile.js"></script>
    <title> GoForum </title>
</head>
<body>
<div class="container">
    <div class="row">
        <h2>{{username}}'s Profile</h2>
        <div class="col-md-7 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>User Profile</h4></div>
                <div class="panel-body">
                    <div class="box box-info">
                        <div class="box-body">
                            <div class="col-sm-6">
                                <div align="center"><img alt="User Pic"
                                                         src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg"
                                                         id="profile-image1" class="img-circle img-responsive">
                                    <input id="profile-image-upload" class="hidden" type="file">
                                    <div style="color:#999;">click here to change profile image</div>
                                    <!--Upload Image Js And Css-->
                                </div>
                                <br>
                                <!-- /input-group -->
                            </div>
                            <div class="col-sm-6">
                                <h4 style="color:#00b1b1;"> {{name}} </h4></span>
                                <span><p> {{username}} </p></span>
                            </div>
                            <div class="clearfix"></div>
                            <hr style="margin:5px 0 5px 0;">
                            <div class="col-sm-5 col-xs-6 tital ">Gender:</div>
                            <div class="col-sm-7"> {{gender}} </div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            <div class="col-sm-5 col-xs-6 tital ">Date of Birth</div>
                            <div class="col-sm-7"> {{birthday}} </div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            <div class="col-sm-5 col-xs-6 tital "> Country</div>
                            <div class="col-sm-7"> {{country}} </div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            <div class="col-sm-5 col-xs-6 tital "> Province</div>
                            <div class="col-sm-7"> {{province}} </div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            <div class="col-sm-5 col-xs-6 tital "> City</div>
                            <div class="col-sm-7"> {{city}} </div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            <div class="col-sm-5 col-xs-6 tital "> Coin</div>
                            <div class="col-sm-7"> {{coin}} </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(function () {
                $("#profile-image1").on("click", function () {
                    $("#profile-image-upload").click();
                });
            });
        </script>
    </div>
</div>
</body>
